FROM fedora:42

# Install required packages
RUN dnf install -y \
    python3 \
    iproute \
    systemd \
    kubectl \
    && dnf clean all

# Create app directory
WORKDIR /app

# Copy the application
COPY app.py /app/

# Make the app executable
RUN chmod +x /app/app.py

# Expose the service port
EXPOSE 8080

# Run the application
CMD ["/usr/bin/python3", "/app/app.py"]


